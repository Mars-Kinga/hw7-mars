function sorted_insert(n, xs) =
  if xs = nil
  then pair(n, nil)
  else
    let x = left(xs) in
    let tail = right(xs) in
    if n < x
    then pair(n, xs)
    else pair(x, sorted_insert(n, tail))

function sort(xs) =
  if xs = nil
  then nil
  else
    let x = left(xs) in
    let tail_sorted = sort(right(xs)) in
    sorted_insert(x, tail_sorted)

sort(pair(3, pair(1, pair(2, nil))))
